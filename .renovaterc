{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    ":semanticCommits"
  ],
  "ignorePaths": [
    "k8s/flux/flux-system/gotk-components.yaml"
  ],
  "flux": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "minimumReleaseAge": "3 days",
  "minimumReleaseAgeBehaviour": "timestamp-optional",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "pin"
      ],
      "enabled": true
    },
    {
      "matchUpdateTypes": [
        "digest"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "renovate/renovate"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "schedule": [
        "* * 1 * *"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "/.*immich-app/immich-.*/"
      ],
      "groupName": "immich"
    },
    {
      "matchPackageNames": [
        "k3s"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "rancher/k3s-upgrade"
      ],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/inventory\\.yaml$/"
      ],
      "matchStrings": [
        "k3s_version:\\s*(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "k3s",
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "custom.k3s"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/control-plane\\.yaml$/",
        "/worker\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "k3s",
      "versioningTemplate": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-k3s(?<build>.+)$",
      "datasourceTemplate": "custom.k3supgrade"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//traefik\\.yaml$//"
      ],
      "matchStrings": [
        "moduleName:\\s*\"(?<depName>github.com/[^\\\"]+)\"[\\s\\S]*?version:\\s*\"(?<currentValue>v?[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "k3s": {
      "defaultRegistryUrlTemplate": "https://update.k3s.io/v1-release/channels",
      "transformTemplates": [
        "{'releases':[{'version': $.data[id = 'stable'].latest}]}"
      ]
    },
    "k3supgrade": {
      "defaultRegistryUrlTemplate": "https://update.k3s.io/v1-release/channels",
      "transformTemplates": [
        "{'releases':[{'version': $replace($.(data[id = 'stable'].latest),'+','-')}]}"
      ]
    }
  }
}
