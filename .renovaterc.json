{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":semanticCommits"
  ],
  "ignorePaths": [
    "k8s/flux/flux-system/gotk-components.yaml"
  ],
  "flux": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/inventory\\.yaml$/"
      ],
      "matchStrings": [
        "k3s_version:\\s*(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "k3s-io/k3s",
      "datasourceTemplate": "github-releases"
    }
  ]
}
